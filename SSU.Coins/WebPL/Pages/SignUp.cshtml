@using SSU.Coins.Entities;
@using SSU.Coins.Ioc;
@using SSU.Coins.BLL.Interface;
@using Ninject;

@{ Layout = "BasePages/_basePage.cshtml";
    Page.Section = "SignUp";
    var _userLogic = DependenciesResolver.Kernel.Get<IUserLogic>();
    var _roleWebSiteLogic = DependenciesResolver.Kernel.Get<IRoleWebSiteLogic>();


}

@section SignUp {
    <head>
        <link href="~/Style/Alerts.css" rel="stylesheet" />
    </head>
    <main class="main_registration" role="main">
        <div class="container-registration d-flex align-items-center ">
            <form class="form-signin" method="post"action="~/Redirect/redirectSignUp.cshtml">
                <div class="text-center alert alert-danger" role="alert">
                    Данный Email уже занят
                </div>
                <br />
                <h1 class="text-center h3 mb-3 font-weight-normal">Регистрация</h1>
                <label for="inputText" class="text-error label-surname visually-hidden"></label>
                <input name="surname" type="text" id="input-surname" class="form-control" placeholder="Surname" required="" autofocus="">

                <label for="inputText" class="text-error label-frist-name visually-hidden"></label>
                <input name="firstName" type="text" id="input-first-name" class="form-control" placeholder="First name" required="" autofocus="">

                <label for="inputText" class="text-error label-middle-name visually-hidden"></label>
                <input name="middleName" type="text" id="input-middle-name" class="form-control" placeholder="Middle name" required="" autofocus="">

                <label for="inputEmail" class="text-error label-login visually-hidden"></label>
                <input name="login" type="email" id="inputLogin" class="form-control" placeholder="Email address" required="" autofocus="">

                <label for="inputPassword" class="text-error label-password visually-hidden"></label>
                <input name="password" type="password" id="inputPassword" class="form-control" placeholder="Password" required="">

                <label for="input-re-enter" class="text-error label-re-password visually-hidden"></label>
                <input name="inputReEnter" type="password" id="input-re-enter" class="form-control" placeholder="Re-enter password" required="">

                <br />
                <button class="w-100 btn btn-lg btn-primary" type="submit" id="submit">Sign in</button>
            </form>
        </div>
    </main>
    <script src="~/Jq/jquery-3.5.1.min.js"></script>
    <script src="~/Js/ajaxSignUp.js" type="text/javascript"></script>
}
